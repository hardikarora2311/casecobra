
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphonex
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseMaterial {
  silicone
  polycarbonate
}


enum CaseFinish {
  smooth
  textured
}

enum ModelColors {
  black
  blue
  rose
}

model Configuration{
  id        String @id @default(cuid())
  width      Int
  height     Int
  imageUrl   String
  croppedImgUrl String?
  model      PhoneModel?
  material   CaseMaterial?
  color      ModelColors?
  finish     CaseFinish?
}